
# OS type (linux OR osx)
OSTYPE = linux

# Serial compilers

CC = gcc
CXX = g++
FC = gfortran

# Compiler to use for packages needed on the build machine

BUILD_CC = gcc

# MPI compilers

MPICC = ${CRAYPE_DIR}/bin/cc
MPICXX = ${CRAYPE_DIR}/bin/CC
MPIFC = ${CRAYPE_DIR}/bin/ftn
MPI_CPPFLAGS = ${CRAY_MPICH2_DIR}/include
MPI_LDFLAGS = ${CRAY_MPICH2_DIR}/lib
MPI_CXXLIB = mpichcxx_gnu
MPI_LIB = mpich_gnu
MPI_EXTRA_COMP =
MPI_EXTRA_LINK = -shared

# Compile flags

CFLAGS = -O3 -g -fPIC -pthread -march=knl
CXXFLAGS = -O3 -g -fPIC -pthread -march=knl
FCFLAGS = -O3 -g -fPIC -pthread -march=knl

OPENMP_CFLAGS = -fopenmp
OPENMP_CXXFLAGS = -fopenmp
LDFLAGS = -fopenmp -lpthread

# Are we doing a cross-compile?

CROSS =

# Parallel builds
MAKEJ = 4

# Python version to use
PYVERSION = 3.7

# For BLAS/LAPACK, we use openblas

BLAS = -lopenblas -fopenmp -lm
LAPACK =

# Boost toolchain name

BOOSTCHAIN = gcc

# Group and permissions to set

CHGRP = hpcosmo
CHMOD = a+rX,g-w,o-w
